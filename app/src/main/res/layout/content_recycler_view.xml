<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/bg_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_holder"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:src="@drawable/img_book1" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/brown"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by: Someone"
                        android:textStyle="italic"
                        android:layout_marginBottom="15dp"
                        android:layout_marginEnd="5dp"/>
                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(year)"
                        android:textStyle="italic"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_book_description"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:text="Book Description here! Book Description here!"
                    android:textSize="14sp"
                    android:textColor="#615151"
                    android:layout_marginBottom="15dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn_view_more"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Read"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/brown"/>
                    <Button
                        android:id="@+id/btn_full_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shop Now"
                        android:layout_weight="1"
                        android:backgroundTint="@color/orange_brown"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>